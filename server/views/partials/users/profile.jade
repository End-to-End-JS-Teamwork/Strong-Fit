extends ../../includes/layout
block main-content


    if !!currentUser
        script.
            window.bootstrappedUserObject = !{JSON.stringify(currentUser)}

    .container.center-block
        br
        .row
            #register-user-container.col-xs-12.col-sm-12.col-md-6.col-md-offset-3.well.well-lg

                legend
                if(currentUser)
                    h1 The profile of: #{currentUser.firstName}
                    h4 Update profile
                else
                    h3 no user
                form.form(role='form', name='newUserForm', method='POST', action='/profile' novalidate )
                    .row
                        .col-xs-6.col-md-6
                            label(for='firstname') First Name
                            input#firstname.form-control(name='firstName', placeholder='First Name', type='text', required='', autofocus='')
                        .col-xs-6.col-md-6
                            label(for='lastname') Last Name
                            input#lastname.form-control(name='lastName', placeholder='Last Name', type='text')
                    br
                    label(for='email') E-mail
                    input#email.form-control(name='email', placeholder='E-mail', type='email')
                    br
                    //label(for='username') Username
