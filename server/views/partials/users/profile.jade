                    //input(id="username" class="hidden" type="text" name="username" value=currentUser.username)
                    //br
                    label(for='url') Image URL
                    input#url.form-control(name='url', placeholder='Image URL', type='text')
                    br
                    label(for='password') Password
                    input#password.form-control(name='password', placeholder='Password', type='password', required='')
                    br
                    label(for='confirmPassword') Confirm Password
                    input#confirmPassword.form-control(name='confirmPassword', placeholder='Confirm Password', type='password', required='')
                    br
                    button.btn.btn-lg.btn-primary.btn-block(type='submit')
                        | Update

