extends ../../includes/layout
block main-content

    if !!currentUser
        script.
            window.bootstrappedUserObject = !{JSON.stringify(currentUser)}

    .container.center-block
        br
        .row
            #register-user-container.col-xs-12.col-sm-12.col-md-6.col-md-offset-3.well.well-lg

                legend
                    h1 Register

                form.form(role='form', name='newUserForm', method='POST', action='/register' novalidate )
                    .row
                        .col-xs-6.col-md-6
                            label(for='firstname') First Name
                            input#firstname.form-control(name='firstname', placeholder='First Name', type='text', required='', autofocus='')
                        .col-xs-6.col-md-6
                            label(for='lastname') Last Name
                            input#lastname.form-control(name='lastname', placeholder='Last Name', type='text', required='')
                    br
                    label(for='email') E-mail
                    input#email.form-control(name='email', placeholder='E-mail', type='email', required='')
                    br
                    label(for='username') Username
                    input#username.form-control(name='username', placeholder='Username', type='text', required='')
                    br
                    label(for='password') Password
                    input#password.form-control(name='password', placeholder='Password', type='password', required='')
                    br
                    label(for='confirmPassword') Confirm Password
                    input#confirmPassword.form-control(name='confirmPassword', placeholder='Confirm Password', type='password', required='')
                    br
                    button.btn.btn-lg.btn-primary.btn-block(type='submit')
                        | Sign up


