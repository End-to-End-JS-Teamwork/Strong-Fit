extends ../../includes/layout
block main-content
    .container-fluid
        .row
            article(class="col-md-8 col-md-offset-2 .article" style="box-shadow: 4pt 4pt 3pt 2pt orange; border: 1px solid black;")
                header 
                    h1 #{article.title}
                    strong Създадена от: #{article.createdBy}, #{article.createdOn}
                section
                    img.openedArticleImage(src="#{article.imageUrl}" class="img-rounded")
                    p #{article.description}
            
            
