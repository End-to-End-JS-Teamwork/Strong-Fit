extends ../../includes/layout
block main-content
    div(class="panel panel-default col-lg-offset-1 col-lg-10")
        div(class="panel-heading" style="margin-top: 10px;")
            h3(class="panel-title") #{subcategory.name}
        div(class="panel-body col-lg-offset-1 col-lg-10")
            each topic in subcategory.topics
                div(class="panel panel-default")
                    div(class="panel-body") =topic
